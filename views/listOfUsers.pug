extends layout

mixin tableElement(login, fraction, likes, comments)
    tr(class="users-table__row") 
        td(class="users-table__data")=login
        td(class=`users-table__data ${fraction}`)=fraction
        td(class="users-table__data")=likes
        td(class="users-table__data")=comments

block content
    main(class="users-list-container")    
        form(method="GET" class="search")
            input(type="text" name="search" placeholder="Search.." class="search__input") 
            input(type="submit" class="search__button button" value='Search')
        section(class="list-of-users")          
            table(class="list-of-users__table users-table")
                thead(class="users-table__head") 
                    tr(class="users-table__row users-table__row-header") 
                        th(class="users-table__header") Nick
                        th(class="users-table__header") Fraction
                        th(class="users-table__header") Likes
                        th(class="users-table__header") Comments
                tbody
                    each user in users 
                        +tableElement(user.login, user.fraction, user.likes, user.comments)


    script(src="/javascript/main.js" type="module") 
